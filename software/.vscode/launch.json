{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "C/C++: g++ debug active file",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceRoot}/build/ahriman",
        "args": [],
        "stopAtEntry": true,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": true,
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
      }
    ]
  }